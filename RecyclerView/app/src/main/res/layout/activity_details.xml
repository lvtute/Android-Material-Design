<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailsActivity"
    android:background="@color/colorAccent">


    <TextView
        android:textSize="@dimen/dTextSize"
        android:id="@+id/dName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="103dp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:textSize="@dimen/dTextSize"
        android:id="@+id/dDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="121dp"

        app:layout_constraintStart_toStartOf="@+id/dName"
        app:layout_constraintTop_toBottomOf="@+id/dName" />
    <TextView
        android:textSize="@dimen/dTextSize"
        android:id="@+id/dRating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="134dp"

        app:layout_constraintStart_toStartOf="@+id/dDescription"
        app:layout_constraintTop_toBottomOf="@+id/dDescription" />

</androidx.constraintlayout.widget.ConstraintLayout>